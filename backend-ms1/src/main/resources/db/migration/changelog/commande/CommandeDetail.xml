<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="commande_detail">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="prix" type="NUMERIC"/>
        <column name="qte" type="NUMERIC"/>

        <column name="commande_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="produit_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="commande_detail"
              baseColumnNames="commande_id"
              referencedTableName="commande"
              referencedColumnNames="id"
              constraintName="fk_commande_detail_commande"/>
      <addForeignKeyConstraint
              baseTableName="commande_detail"
              baseColumnNames="produit_id"
              referencedTableName="produit"
              referencedColumnNames="id"
              constraintName="fk_commande_detail_produit"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="commande_detail_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/commande/CommandeDetail.csv"
            tableName="commande_detail">
      <column name="id" type="NUMERIC"/>
          <column name="prix" type="NUMERIC"/>
          <column name="qte" type="NUMERIC"/>
        <column name="commande" type="BIGINT"/>
        <column name="produit" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
